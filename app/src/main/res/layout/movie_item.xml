<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.arctouch.codechallenge.view.feature.home.viewmodel.MovieItemViewModel"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="@dimen/size_02x"
        android:layout_marginTop="@dimen/size_00_5x"
        android:layout_marginEnd="@dimen/size_02x"
        android:layout_marginBottom="@dimen/size_00_5x"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="0dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="@dimen/size_08x"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:placeholder="@{@drawable/ic_image_placeholder}"
                app:srcURL="@{viewModel.poster}"/>

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_01x"
                android:layout_marginTop="@dimen/size_01x"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.title}"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/posterImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Titanic"/>

            <TextView
                android:id="@+id/genresTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_01x"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.genres}"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/posterImageView"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                tools:text="Drama, Romance, Thriller"/>

            <TextView
                android:id="@+id/releaseDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/size_01x"
                android:layout_marginBottom="@dimen/size_01x"
                android:text="@{viewModel.releaseDate}"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@id/posterImageView"
                app:layout_constraintTop_toBottomOf="@+id/genresTextView"
                tools:text="19/12/1997"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
